.chat-main__messages__box{"data-message-id": "#{message.id}"}
  .chat-main__messages__upper-message
    .chat-main__messages__upper-message__user-name
      = message.user.name
    .chat-main__messages__upper-message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat-main__messages__lower-message
    - if message.content.present?
      %p.chat-main__messages__lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?